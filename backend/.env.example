# App
PORT=5000
NODE_ENV=development
JWT_SECRET=replace_with_a_long_random_string
OWNER_EMAIL=you@yourdomain.com

# MongoDB (MongoDB Atlas)
MONGODB_URI=mongodb+srv://<user>:<pass>@cluster0.mongodb.net/3d_printing?retryWrites=true&w=majority

# File storage (local by default). To enable S3 set USE_S3=true and fill AWS_* vars.
USE_S3=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
S3_BUCKET=

# Email (SMTP). Example: Gmail app password or transactional provider credentials
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=you@yourdomain.com
SMTP_PASS=your_smtp_app_password

# Other
UPLOAD_DIR=uploads
